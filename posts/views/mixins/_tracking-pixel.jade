mixin tracking-pixel(id)
  script(src='//platform.twitter.com/oct.js', type='text/javascript')
  script(type='text/javascript').
    twttr.conversion.trackPid('#{id}', { tw_sale_amount: 0, tw_order_quantity: 0 });
  noscript
    img(height='1', width='1', style='display:none;', alt='', src='https://analytics.twitter.com/i/adsct?txn_id=#{id}&p_id=Twitter&tw_sale_amount=0&tw_order_quantity=0')
    img(height='1', width='1', style='display:none;', alt='', src='//t.co/i/adsct?txn_id=#{id}&p_id=Twitter&tw_sale_amount=0&tw_order_quantity=0')